<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarItemDetail"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgItemImageDetail"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:background="#D9D9D9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtItemNameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item name"
        android:textSize="34sp"
        android:textColor="#DE000000"
        android:fontFamily="sans-serif"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/imgItemImageDetail"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtItemWeightDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100 gram"
        android:textSize="16sp"
        android:textColor="#DE000000"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="2dp"
        android:letterSpacing="0.15"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtItemNameDetail"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtItemPriceDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 650.000"
        android:textSize="16sp"
        android:textColor="#DE000000"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="2dp"
        android:letterSpacing="0.15"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtItemNameDetail"
        app:layout_constraintStart_toEndOf="@+id/txtItemWeightDetail" />

    <View
        android:id="@+id/dividerView1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtItemPriceDetail"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtItemDescriptionDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Put your item description here."
        android:textSize="16sp"
        android:textColor="#99000000"
        android:fontFamily="sans-serif"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/dividerView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/dividerView2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtItemDescriptionDetail"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAddToCartItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD TO CART"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif"
        android:background="#1453F6"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/dividerView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
