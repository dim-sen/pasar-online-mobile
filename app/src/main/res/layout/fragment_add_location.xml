<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAddLocation"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAddLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a Shipping Location"
        android:textColor="#DE000000"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarAddLocation" />

    <!-- Location Name -->
    <EditText
        android:id="@+id/locationName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Location Name (Home/ Office/ etc.)"
        android:textColor="#DE000000"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAddLocation" />

    <!-- Select Province -->
    <EditText
        android:id="@+id/selectProvince"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Select Province"
        android:textColor="#DE000000"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationName" />

    <!-- Select City -->
    <EditText
        android:id="@+id/selectCity"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Select City"
        android:textColor="#DE000000"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectProvince" />

    <!-- Select Sub-district -->
    <EditText
        android:id="@+id/selectSubdistrict"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Select Sub-district"
        android:textColor="#DE000000"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectCity" />

    <!-- Zip Code -->
    <EditText
        android:id="@+id/zipCode"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Zip Code"
        android:textColor="#DE000000"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectSubdistrict" />

    <!-- Street Name -->
    <EditText
        android:id="@+id/streetName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Street Name"
        android:textColor="#DE000000"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zipCode" />

    <!-- Location Detail -->
    <EditText
        android:id="@+id/locationDetail"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Location Detail (Optional)"
        android:textColor="#DE000000"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/streetName" />

    <!-- Save Button -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#1453F6"
        android:text="SAVE"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/locationDetail" />

</androidx.constraintlayout.widget.ConstraintLayout>