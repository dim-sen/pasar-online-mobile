<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarPackageDetail"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgPackageImage"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:background="#D9D9D9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtPackageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Package name"
        android:textSize="34sp"
        android:textColor="#DE000000"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/imgPackageImage"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtPackageWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100 gram"
        android:textSize="16sp"
        android:textColor="#DE000000"
        android:lineSpacingExtra="2dp"
        android:letterSpacing="0.15"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtPackageName"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtPackagePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 650.000"
        android:textSize="16sp"
        android:textColor="#DE000000"
        android:lineSpacingExtra="2dp"
        android:letterSpacing="0.15"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtPackageName"
        app:layout_constraintStart_toEndOf="@+id/txtPackageWeight" />

    <View
        android:id="@+id/dividerView1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtPackagePrice"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtPackageDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Put your item description here."
        android:textSize="16sp"
        android:textColor="#99000000"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/dividerView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/dividerView2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtPackageDescription"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtItemDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Satuan:"
        android:textSize="16sp"
        android:textColor="#99000000"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/dividerView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerItemDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtItemDetail" />

    <Button
        android:id="@+id/btnAddToCartPackage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD TO CART"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif"
        android:background="#1453F6"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/recyclerItemDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
